<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/id_check"
        android:layout_width="30dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_alignParentLeft="true"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/margin10"
        android:layout_toRightOf="@+id/id_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                style="@style/layout_horizontal"
                android:layout_marginLeft="15dip"
                android:layout_weight="1.2"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/id_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="杨明智 "
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_ly_edit"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/icon_edit"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="  编辑"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_ultra"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/id_ly_del"
                style="@style/layout_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:src="@drawable/icon_del"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="  删除"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small_ultra"
                    />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/id_lay_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/id_tv_address"
                style="@style/layout_vertical"
                android:layout_margin="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="广东省深圳市罗湖区"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"/>


            <TextView
                android:id="@+id/phone_tv"
                style="@style/layout_vertical"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="13177008821"
                android:textSize="@dimen/text_size_small"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>