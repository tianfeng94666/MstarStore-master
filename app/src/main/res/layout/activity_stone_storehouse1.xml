<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/id_rel_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_shadow_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_ig_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="5dip"
            android:onClick="onBack"
            android:padding="10dip"

            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="历史订单" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/id_rel_title"
        android:layout_marginBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_certificate_orgnization"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:text="证书机构"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />


                <TextView
                    android:id="@+id/tv_certificate_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_white_bg"
                    android:gravity="center"
                    android:padding="4dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35" />

                <TextView
                    android:id="@+id/tv_certificate_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/corners_white_bg"
                    android:gravity="center"
                    android:padding="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                style="@style/padding_parent"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"

                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_add_spot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:src="@drawable/icon_acc"
                    android:text="加点"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_acc" />

                <EditText
                    android:id="@+id/et_ring_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1.5"
                    android:background="@color/white"
                    android:button="@null"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:text="0"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:text="%" />

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_add" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="克        拉"
                    android:textColor="@color/text_color" />


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:scrollbarSize="2dp"
                    android:scrollbarFadeDuration="3000"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent">

                        <GridView
                            android:id="@+id/gv_weight"
                            android:layout_width="1800dp"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:columnWidth="120dp"
                            android:numColumns="auto_fit"
                            android:listSelector="@android:color/transparent"
                            android:stretchMode="columnWidth"></GridView>
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:text="自定范围"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <EditText
                    android:id="@+id/et_weight_min"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="至"
                    android:textColor="@color/text_color" />

                <EditText
                    android:id="@+id/et_weight_max"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  克拉"
                    android:textColor="@color/text_color" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价        格"
                    android:textColor="@color/text_color" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:scrollbarFadeDuration="3000"
                    android:scrollbarSize="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent">

                        <GridView
                            android:id="@+id/gv_price"
                            android:layout_width="800dp"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:listSelector="@android:color/transparent"
                            android:stretchMode="columnWidth"></GridView>
                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_height"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="自定范围"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_small_medium" />

                <EditText
                    android:id="@+id/et_price_min"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="至"
                    android:textColor="@color/text_color" />

                <EditText
                    android:id="@+id/et_price_max"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/border_line"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/theme_red"
                    android:textSize="@dimen/text_size_small_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  元"
                    android:textColor="@color/text_color" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_shape"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="形状"
                    android:textColor="@color/text_color" />
            </LinearLayout>

            <com.qx.mstarstoreapp.viewutils.CustomGridView
                android:id="@+id/gv_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></com.qx.mstarstoreapp.viewutils.CustomGridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_color"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="颜色"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/theme_red" />

            </LinearLayout>

            <GridView
                android:id="@+id/gv_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="7"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <LinearLayout
                android:id="@+id/ll_quality"
                style="@style/margin_topAndBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:text="净度"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_quality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/theme_red" />
            </LinearLayout>


            <GridView
                android:id="@+id/gv_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="4dp"
                android:isScrollContainer="false"
                android:numColumns="5"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:scrollbars="none"
                android:verticalSpacing="4dp"></GridView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line" />

            <ListView
                android:id="@+id/lv_others"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:divider="@color/color_line"
                android:dividerHeight="1dp"></ListView>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/theme_red"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/black" />

    </LinearLayout>


</RelativeLayout>