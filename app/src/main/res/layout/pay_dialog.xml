<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/frame_bg_while"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        layout="@layout/title_layout"
        ></include>


    <EditText
        android:id="@+id/id_ed_pwd"
        android:paddingLeft="15dip"
        android:hint="请输入密码"
        android:inputType="numberPassword"
        android:layout_marginTop="40dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@null"
        android:background="@drawable/tab_bto_line"
        />



    <Button
        android:clickable="true"
        android:id="@+id/id_btn_pay"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="35dip"
        android:layout_marginBottom="25dip"
        android:background="@drawable/btn_green_down"
        android:layout_below="@+id/id_rel22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textColor="@color/white"
        />
</LinearLayout>