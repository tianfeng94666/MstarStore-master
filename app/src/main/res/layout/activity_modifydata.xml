<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:id="@+id/id_lay_root"
    >


    <include layout="@layout/title_layout" />

<ScrollView
    android:paddingBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="用户名"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/theme_bg"/>



        <RelativeLayout
            android:id="@+id/id_update_icon"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/white"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_below_menu_ic"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_del"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <TextView
                android:layout_toRightOf="@id/iv_below_menu_ic"
                android:id="@+id/tv_menu_title"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改头像"
                />


            <ImageView
                android:id="@+id/id_ig_userpic"
                android:layout_width="50dip"
                android:src="@drawable/icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="5dp"
                android:layout_height="50dip"
                />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_btn_expand_pressed"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginTop="1dip"
            android:padding="5dip"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/ringagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="是否升级"
                />

            <ImageView
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:button="@null"
                android:id="@+id/splitbutton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignRight="@id/ringagain"
                android:layout_alignTop="@id/ringagain"
                android:src="@drawable/icon_switch_off"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginTop="1dip"
            android:padding="5dip"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_is_show_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="是否显示价格"
                />

            <ToggleButton
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:button="@drawable/togglebutton"
                android:id="@+id/iv_is_show_price"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="-40dp"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_alignTop="@id/tv_is_show_price"

                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_clear_memery"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginTop="1dip"
            android:padding="5dip"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_is_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="是否清空图片缓存"
                />


            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_shared"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_marginTop="1dip"
            android:padding="5dip"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center_vertical"
                android:padding="10dip"
                android:text="一键分享"
                />


            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:src="@drawable/icon_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"/>


        <TextView
            android:id="@+id/id_tv_exit"
            android:layout_marginTop="@dimen/margin15"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/btn_nor_down"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="退出登录"
            android:clickable="true"
            android:layout_height="40dip"
            android:textColor="@color/white"
            />

    </LinearLayout>
</ScrollView>



</LinearLayout>