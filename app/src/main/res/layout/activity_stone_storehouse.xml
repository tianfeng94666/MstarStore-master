<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tv_certificate_orgnization"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_height"
        android:orientation="horizontal">

        <TextView
            android:textSize="@dimen/text_size_small_medium"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:text="证书机构" />
    </LinearLayout>

    <LinearLayout
        style="@style/padding_parent"
        android:layout_width="match_parent"
        android:layout_height="35dp"
     
       
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_spot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:src="@drawable/icon_acc"
android:textSize="@dimen/text_size_small_medium"
            android:text="加点" />

        <ImageView
            android:id="@+id/iv_reduce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:src="@drawable/icon_acc" />

        <EditText
            android:id="@+id/id_cus_store_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1.5"
            android:background="@drawable/btn_bg_while"
            android:button="@null"
            android:gravity="center"
            android:hint="件数"
            android:inputType="numberDecimal"
            android:textSize="@dimen/text_size_small_medium" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_add" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_height">
        <TextView
            android:text="钻石重量(克拉)"
      android:layout_toLeftOf="@+id/tv_weight_min"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_small_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_weight_min"
            android:text="0.1"
            android:textColor="@color/theme_red"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_small_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="-10"
            android:textColor="@color/theme_red"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_small_medium"
            android:layout_toRightOf="@+id/tv_weight_min"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <com.qx.mstarstoreapp.viewutils.RangeSeekBar
        android:id="@+id/sb_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineColorSelected="@android:color/holo_red_dark"
        app:lineColorEdge="@android:color/white"
        app:min="0.1"
        app:max="10"
        app:seekBarResId="@drawable/seekbar_thumb"
        app:thumbPrimaryColor="@android:color/white"
        app:thumbSecondaryColor="@android:color/holo_red_dark"
        app:seekBarHeight="4dp"
        app:thumbSize="50dp"
        app:cellMode="number"
        app:seekBarMode="range"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_height">
        <TextView
            android:text="价格范围(元)"
            android:layout_toLeftOf="@+id/tv__price_min"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_small_medium"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv__price_min"
            android:text="500"
            android:textColor="@color/theme_red"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_small_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="-1000"
            android:id="@+id/tv_price_max"
            android:textSize="@dimen/text_size_small_medium"
            android:textColor="@color/theme_red"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv__price_min"
            android:layout_marginRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <com.qx.mstarstoreapp.viewutils.RangeSeekBar
        android:id="@+id/sb_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lineColorSelected="@android:color/holo_red_dark"
        app:lineColorEdge="@android:color/white"
        app:min="0.1"
        app:max="10"
        app:seekBarResId="@drawable/seekbar_thumb"
        app:thumbPrimaryColor="@android:color/white"
        app:thumbSecondaryColor="@android:color/holo_red_dark"
        app:seekBarHeight="4dp"
        app:thumbSize="30dp"
        app:cellMode="number"
        app:seekBarMode="range"
        />
    <TextView
        android:text="形状"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>