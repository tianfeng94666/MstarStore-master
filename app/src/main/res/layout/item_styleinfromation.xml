<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!---->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="2dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="@dimen/margin10"
            android:text="主  石"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small_medium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/id_tv_title"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout_vertical"
                android:layout_marginBottom="@dimen/margin5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.qx.mstarstoreapp.viewutils.CustomSelectButton
                    android:id="@+id/id_store_type"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    app:tv_name="类型"
                    app:tv_size="7sp"/>

                <com.qx.mstarstoreapp.viewutils.CustomSelectInput
                    android:id="@+id/id_store_norm"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    app:tv_name="规格"
                    app:tv_size="7sp"/>

                <com.qx.mstarstoreapp.viewutils.CustomSelectButton
                    android:id="@+id/id_store_shape"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    app:tv_name="形状"
                    app:tv_size="7sp"/>


                <com.qx.mstarstoreapp.viewutils.CustomselectStringButton
                    android:id="@+id/id_ed_number"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="7dip"
                    android:layout_weight="1"
                    app:tv_name="数量"
                    app:tv_size="7sp"
                    />


            </LinearLayout>

            <LinearLayout
                style="@style/layout_vertical"
                android:layout_marginTop="@dimen/margin5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.qx.mstarstoreapp.viewutils.CustomSelectButton
                    android:id="@+id/id_store_color"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    app:tv_name="颜色"
                    app:tv_size="7sp"
                    />


                <com.qx.mstarstoreapp.viewutils.CustomSelectButton
                    android:id="@+id/id_store_cut"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    app:tv_name="净度"
                    app:tv_size="7sp"/>

                <com.qx.mstarstoreapp.viewutils.CustomSelectButton
                    android:id="@+id/id_store_price"
                    style="@style/layout_horizontal"
                    android:layout_marginRight="3dip"
                    android:layout_weight="1"
                    app:tv_name="价格"
                    app:tv_size="7sp"
                    />

                <LinearLayout
                    android:id="@+id/id_check_Layout_visiable"
                    style="@style/layout_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginRight="7dip"
                    android:gravity="center"
                    android:background="@drawable/btn_bg_while"
                    >

                    <CheckBox
                        android:id="@+id/id_is_check"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@drawable/checkbox_style"
                        android:layout_margin="2dp"
                        android:gravity="center"

                        />

                    <TextView
                        android:id="@+id/tv_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="自带"
                        android:textSize="8sp"
                        />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>