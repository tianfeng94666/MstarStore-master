<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dip"
    android:orientation="vertical"
    android:background="@color/theme_red"
    android:id="@+id/rl_address"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_marginTop="15dip"
            style="@style/layout_vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginRight="@dimen/margin5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small_medium"
                />

            <TextView

                android:textSize="16sp"
                android:id="@+id/id_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_tv1"
                android:textColor="@color/white" />


            <TextView
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/id_tv_name"
                android:id="@+id/phone_tv"
                android:layout_marginLeft="@dimen/margin15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                />
        </RelativeLayout>




        <LinearLayout
            android:layout_margin="@dimen/margin10"
            style="@style/layout_vertical"
            android:layout_weight="2">

            <TextView
                android:textSize="@dimen/text_size_small_medium"
                android:id="@+id/id_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="2"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/id_no_adress"
        android:gravity="center"
        android:text="请添加收货地址"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minLines="2"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/id_ig_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:src="@drawable/icon_right"></ImageView>


</RelativeLayout>