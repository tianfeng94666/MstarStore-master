<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_delivery_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_stone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/tv_delivery_item_number"
            android:text="女戒 562164"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_delivery_item_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_delivery_item_cost"
            android:text="成本："
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_delivery_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="¥ 881.5"
            android:textColor="@color/theme_red" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/ll_priduct_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/tv_delivery_item_less2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="手寸：11  毛重：3g  净金重：3.15g 损耗：0.85g"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/tv_delivery_item_product_inf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="主石 石号：2156  数量：1  重量：1.35  金额：881.5  基本工费：70.0  附加工费：30.0"
                    android:textColor="@color/text_color" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_delivery_item_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="120dp"
                        android:text="备注："
                        android:textColor="@color/text_color" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_delivery_item_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手寸：11  毛重：3g  净金重：3.15g 损耗：0.85g"
            android:textColor="@color/text_color" />

        <ImageView
            android:id="@+id/ib_delivery_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"

            android:src="@drawable/icon_fliter_down" />
    </RelativeLayout>

</LinearLayout>