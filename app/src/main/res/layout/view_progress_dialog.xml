<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
                        android:id="@+id/id_rel_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dip"
                        android:background="@drawable/title_shadow_style"
                        android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_ig_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:padding="10dip"
                android:src="@drawable/icon_return" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我是标题栏" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin10"
            >


            <TextView
                android:id="@+id/id_order_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/theme_back"
                android:padding="@dimen/margin5"
                />

            <TextView
                android:id="@+id/id_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/theme_back"
                android:padding="@dimen/margin5"
                />

            <TextView
                android:id="@+id/id_tv_invo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/theme_back"
                android:padding="@dimen/margin5"
                />


        </LinearLayout>

        <ListView
            android:id="@+id/id_pd_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"/>

    </LinearLayout>



    <include layout="@layout/progress_layout"/>

</RelativeLayout>