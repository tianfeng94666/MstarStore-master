<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/id_rel_title"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_type"
                    style="@style/margin_topAndBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="类型"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/theme_red" />
                </LinearLayout>


                <GridView
                    android:id="@+id/gv_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="4dp"
                    android:isScrollContainer="false"
                    android:numColumns="6"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:scrollbars="none"
                    android:verticalSpacing="4dp"></GridView>
                <TextView
                    android:id="@+id/tv_isshow_more"
                    android:gravity="center"
                    android:text="显示更多"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/theme_bg"
                    android:textColor="@color/text_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_line" />


                <RelativeLayout
                    style="@style/padding_parent"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"

                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_acc"
                        android:text="重量"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_small_medium" />

                    <ImageView
                        android:id="@+id/iv_weight_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                       android:layout_toLeftOf="@id/et_ring_amount"
                        android:src="@drawable/icon_acc" />

                    <EditText
                        android:id="@+id/et_ring_amount"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1.5"
                        android:background="@color/white"
                        android:button="@null"
                        android:gravity="center"
                        android:inputType="number|numberDecimal"
                        android:text="0"
                        android:layout_toLeftOf="@+id/iv_weight_add"
                        android:textSize="@dimen/text_size_small_medium" />



                    <ImageView
                        android:id="@+id/iv_weight_add"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_add" />


                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_line" />


                <RelativeLayout
                    style="@style/padding_parent"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"

                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/icon_acc"
                        android:text="数量"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_small_medium" />

                    <ImageView
                        android:id="@+id/iv_amount_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_toLeftOf="@+id/et_amount"
                        android:src="@drawable/icon_acc" />

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1.5"
                        android:background="@color/white"
                        android:button="@null"
                        android:gravity="center"
                        android:inputType="number|numberDecimal"
                        android:text="0"
                        android:layout_toLeftOf="@+id/iv_amount_add"
                        android:textSize="@dimen/text_size_small_medium" />



                    <ImageView
                        android:id="@+id/iv_amount_add"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icon_add" />


                </RelativeLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/ll_shape"
                    style="@style/margin_topAndBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="形状"
                        android:textColor="@color/text_color" />
                </LinearLayout>

                <com.qx.mstarstoreapp.viewutils.CustomGridView
                    android:id="@+id/gv_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="4dp"
                    android:isScrollContainer="false"
                    android:numColumns="6"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:scrollbars="none"
                    android:verticalSpacing="4dp"></com.qx.mstarstoreapp.viewutils.CustomGridView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/ll_color"
                    style="@style/margin_topAndBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="颜色"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/theme_red" />

                </LinearLayout>

                <GridView
                    android:id="@+id/gv_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="4dp"
                    android:isScrollContainer="false"
                    android:numColumns="7"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:scrollbars="none"
                    android:verticalSpacing="4dp"></GridView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_line" />

                <LinearLayout
                    android:id="@+id/ll_quality"
                    style="@style/margin_topAndBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="净度"
                        android:textColor="@color/text_color" />

                    <TextView
                        android:id="@+id/tv_quality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/theme_red" />
                </LinearLayout>


                <GridView
                    android:id="@+id/gv_quality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="4dp"
                    android:isScrollContainer="false"
                    android:numColumns="5"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:scrollbars="none"
                    android:verticalSpacing="4dp"></GridView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_line" />


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/theme_red"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="重置"
                android:textColor="@color/black" />

        </LinearLayout>


</RelativeLayout>