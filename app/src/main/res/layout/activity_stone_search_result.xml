<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/id_rel_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/title_shadow_style"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_ig_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="6dip"
            android:layout_marginTop="5dip"
            android:onClick="onBack"
            android:padding="10dip"
            android:src="@drawable/icon_return" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="我是标题栏"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:padding="10dip"
            android:text="横竖屏切换"
            android:textColor="@color/text_color" />

    </RelativeLayout>
<TextView
    android:id="@+id/tv_search_target"
    android:paddingLeft="16dp"
    android:gravity="center_vertical"
    android:textColor="@color/text_color"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="35dp" />
    <com.qx.mstarstoreapp.viewutils.CustomHorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.82"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/padding_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ischeck_stone"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_item_weight"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:paddingRight="4dp"
                    android:drawableRight="@drawable/icon_sort"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />
                <TextView
                    android:id="@+id/tv_item_price"
                    android:background="@drawable/table_head"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_item_shape"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_color"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_purity"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_cut"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_polish"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_symmetric"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_fluorescence"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_item_certauth"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text="" />
                <TextView
                    android:id="@+id/tv_item_cerauth_number"
                    android:background="@drawable/table_head"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_item_quoted_price"
                    android:background="@drawable/table_head"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/theme_red" />
            </LinearLayout>


                <com.qx.mstarstoreapp.viewutils.xListView.XListView
                    android:id="@+id/lv_stone"
                    android:divider="@null"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.qx.mstarstoreapp.viewutils.xListView.XListView>

        </LinearLayout>

    </com.qx.mstarstoreapp.viewutils.CustomHorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.01"
        android:background="@color/theme_bg">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.3"
            android:drawableLeft="@drawable/ic_refresh"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="重置选中"
            android:textColor="@color/text_color" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/tv_quoted_price_all"
            style="@style/margin_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="-8dp"
            android:layout_weight="0.3"
            android:textColor="@color/white"
            android:background="@drawable/corners_red_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="批量报价" />

        <TextView
            android:id="@+id/tv_place_order"
            style="@style/margin_parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:textColor="@color/white"
            android:layout_weight="0.3"
            android:background="@drawable/corners_red_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="下单" />
    </LinearLayout>
</LinearLayout>