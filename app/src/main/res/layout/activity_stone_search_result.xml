<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_stone_search_result"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_bg"
        android:orientation="vertical">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/id_rel_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/title_shadow_style"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_ig_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="6dip"
                android:layout_marginTop="5dip"
                android:onClick="onBack"
                android:padding="10dip"
                android:src="@drawable/icon_return" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="我是标题栏"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:padding="10dip"
                android:text="横竖屏切换"
                android:textColor="@color/text_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_search_target"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:textColor="@color/text_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.82">

            <com.qx.mstarstoreapp.viewutils.CustomHorizontalScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    style="@style/padding_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_ischeck_stone"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="勾选" />

                        <TextView
                            android:id="@+id/tv_item_weight"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:drawableRight="@drawable/icon_sort"
                            android:gravity="center"
                            android:paddingRight="4dp"
                            android:text="克拉" />

                        <TextView
                            android:id="@+id/tv_item_price"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:drawableRight="@drawable/icon_sort"
                            android:gravity="center"
                            android:paddingRight="4dp"
                            android:text="价格" />

                        <TextView
                            android:id="@+id/tv_item_shape"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="形状" />

                        <TextView
                            android:id="@+id/tv_item_color"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="颜色" />

                        <TextView
                            android:id="@+id/tv_item_purity"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="净度" />

                        <TextView
                            android:id="@+id/tv_item_cut"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="切工" />

                        <TextView
                            android:id="@+id/tv_item_polish"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="抛光" />

                        <TextView
                            android:id="@+id/tv_item_symmetric"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="对称" />

                        <TextView
                            android:id="@+id/tv_item_fluorescence"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="荧光" />

                        <TextView
                            android:id="@+id/tv_item_certauth"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="证书" />

                        <TextView
                            android:id="@+id/tv_item_cerauth_number"
                            android:layout_width="120dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text="证书号" />

                        <TextView
                            android:id="@+id/tv_item_quoted_price"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/table_head"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/theme_red" />
                    </LinearLayout>


                    <com.qx.mstarstoreapp.viewutils.xListView.XListView
                        android:id="@+id/lv_stone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@null"
                        android:scrollbars="none">

                    </com.qx.mstarstoreapp.viewutils.xListView.XListView>

                    <TextView
                        android:id="@+id/tv_empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="暂无数据"
                        android:visibility="gone" />
                </LinearLayout>

            </com.qx.mstarstoreapp.viewutils.CustomHorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_pager_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_gray"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="1" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_from_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.01"
            android:background="@color/theme_bg"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/ic_refresh"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="重置选中"
                android:textColor="@color/text_color" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/tv_quoted_price_all"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="-8dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="批量报价"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_choose_product"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="-8dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="选择戒托"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_place_order"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="下单"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/tv_confirm_reback"
                style="@style/margin_parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="0.3"
                android:background="@drawable/corners_red_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="确定"
                android:textColor="@color/white"
                android:visibility="gone" />
        </LinearLayout>
        <RelativeLayout
        android:id="@+id/ll_confirm_stone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.01"
        android:background="@color/theme_bg"
        android:visibility="gone">





        <TextView
            android:id="@+id/tv_comfirm_stone"
            style="@style/margin_parent"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/corners_red_bg"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/white"
            android:visibility="visible" />
    </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/btn_popupwindow"
        android:visibility="gone"/>
</RelativeLayout>