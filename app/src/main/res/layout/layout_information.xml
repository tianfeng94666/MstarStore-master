<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/theme_bg"
    >


    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/banner_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/index_product_images_container"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/index_product_images_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|left"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin5"
                    android:lines="2"
                    android:text="千禧之星裸戒(AZB-158183)"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    />


                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/share_btn"
                    android:drawableTop="@drawable/icon_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="收藏"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/margin10"
                >


                <TextView
                    android:id="@+id/tv_sum_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin5"
                    android:gravity="left"
                    android:text="$ 900"
                    android:textColor="#FF0000"
                    android:textSize="22sp" />

                <RelativeLayout
                    android:layout_marginTop="10dip"
                    android:layout_margin="@dimen/margin10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tv_remark"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标签价900"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="库存900"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_centerVertical="true"
                        style="@style/layout_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="千足金"
                        android:textSize="10sp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/margin10"
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/color_line"
                    />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollview"
            android:layout_marginTop="17dip"
            android:layout_marginBottom="20dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:text="购买数量"
                android:textColor="@color/black"
                 />

            <LinearLayout
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_commodity_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/num_subtract"
                    android:clickable="true"
                    />

                <TextView
                    android:id="@+id/btn_commodity_number_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/display_productmade_box"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/btn_commodity_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/num_add"
                    android:clickable="true"
                    />
            </LinearLayout>
        </RelativeLayout>

            
            <LinearLayout
                android:layout_margin="15dip"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:orientation="vertical"
                >


                <Button
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:text="立即购买"
                    android:background="@drawable/btn_bg_red"
                    />

                <Button
                    android:textColor="@color/black"
                    android:layout_marginTop="15dip"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:text="加入购物车"
                    android:background="@drawable/btn_bg_while"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dip"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/color_line"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>