<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="@null">

        <CheckBox
            android:id="@+id/cb_ischeck_stone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          android:layout_marginLeft="26dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="@null" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_weight"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />
    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:paddingRight="10dp"
        android:background="@drawable/table_head"
        android:textSize="13sp"
        android:gravity="right|center_vertical"

        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_shape"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_color"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_purity"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_cut"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_polish"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_symmetric"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_fluorescence"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_certauth"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />
    <TextView
        android:id="@+id/tv_item_cerauth_number"
        android:layout_width="120dp"
        android:textSize="13sp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="克拉" />

    <TextView
        android:id="@+id/tv_item_quoted_price"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/table_head"
        android:gravity="center"
        android:text="报价"
        android:textColor="@color/theme_red" />
</LinearLayout>